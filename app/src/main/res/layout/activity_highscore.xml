<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/highScoreTextView"
            android:text="High Score for x Card Game"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="80"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/highScorePlayerOneTextView"
            android:gravity="center"
            android:text="1. Player 1"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/highScorePlayerTwoTextView"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="2. Player 2"
            android:textColor="#000"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/highScorePlayerThreeTextView"
            android:text="3. Player 3"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/highScoreBackButton"
            android:text="Back"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>